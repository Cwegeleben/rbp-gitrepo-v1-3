{
  "compilerOptions": {
    "target": "ES2022",
  "lib": ["ES2022", "DOM", "DOM.Iterable"],
  "types": ["jest", "node", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "jest.setup.ts",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "src/apps/rbp-shopify-app/**/*.ts",
    "src/apps/rbp-shopify-app/**/*.tsx",
    "src/test/types/**/*.d.ts"
  ]
}